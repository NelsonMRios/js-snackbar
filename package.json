{
  "name": "js-snackbar",
  "version": "2.0.0",
  "description": "Custom Material Design inspired SnackBar notifications",
  "main": "index.js",
  "scripts": {
    "start": "npx npm-run-all build-src-css copy-index react-start",
    "react-start": "BROWSER=none react-scripts start",
    "copy-index": "cp ./index.js src/snackbar.js",
    "build-css": "node-sass snackbar.scss -o ./",
    "build-src-css": "node-sass snackbar.scss -o src/",
    "prepublishOnly": "npx npm-run-all build-css"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "node-sass": "^4.13.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnrhampton/js-snackbar"
  },
  "bugs": {
    "url": "https://github.com/johnrhampton/js-snackbar/issues"
  },
  "keywords": [
    "snackbar",
    "matieral-design"
  ],
  "author": "JRH",
  "license": "MIT",
  "homepage": "https://github.com/johnrhampton/js-snackbar",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
